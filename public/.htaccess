<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

<FilesMatch 'confirm.php'>
    SetEnvIf Referer "contact.php" Ref1
    SetEnvIf Referer "confirm.php" Ref2
    Order Deny,Allow
    Deny from all
    Allow from env=Ref1
    Allow from env=Ref2
</FilesMatch>